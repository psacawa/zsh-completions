#compdef kawiarnia

_kawiarnie () {
  local -a output=("${(f):-$(psql -X -t --csv -c 'select id, nazwa from kawiarnie')}")
  local -a _kawiarnie=(${output/,/:})
  _describe kawiarne _kawiarnie
}

_arguments \
  '-l[wypisz kawiarnie]' '-h[pomoc]' \
  '-a[dodaj kawiarniÄ™]: :' \
  '-v[wypisz wizyty do danej kawiarni]: :_kawiarnie' \
  '1: :_kawiarnie'
