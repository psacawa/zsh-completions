  "(- :)"{-h,--help}"[show this help message and exit]"
  {--partition-name,-n}"[name of the partition]:partition_name:"
  {--partition-type,-t}"[type of the partition]:partition_type:"
  {--partition-boot-default,-d}"[select the default boot partition                                            using the same fallback logic as the IDF bootloader]"
  {--partition-subtype,-s}"[subtype of the partition]:partition_subtype:"
  "--info[type of partition information to get]:info:(name type subtype offset size encrypted)"
  "--part_list[Get a list of partitions suitable for a given type]"
)

_shtab_parttool_read_partition=(
  "(- :)"{-h,--help}"[show this help message and exit]"
  {--partition-name,-n}"[name of the partition]:partition_name:"
  {--partition-type,-t}"[type of the partition]:partition_type:"
  {--partition-boot-default,-d}"[select the default boot partition                                            using the same fallback logic as the IDF bootloader]"
  {--partition-subtype,-s}"[subtype of the partition]:partition_subtype:"
  "--output[file to dump the read partition contents to]:output:"
)

_shtab_parttool_write_partition=(
  "(- :)"{-h,--help}"[show this help message and exit]"
  {--partition-name,-n}"[name of the partition]:partition_name:"
  {--partition-type,-t}"[type of the partition]:partition_type:"
  {--partition-boot-default,-d}"[select the default boot partition                                            using the same fallback logic as the IDF bootloader]"
  {--partition-subtype,-s}"[subtype of the partition]:partition_subtype:"
  "--input[file whose contents are to be written to the partition offset]:input:"
)

typeset -A opt_args
local context state line curcontext="$curcontext"

_arguments \
  $_shtab_parttool_options_ \
   \
  ': :_shtab_parttool_commands_' \
  '*::args:->args'

case $words[1] in
  erase_partition) _arguments $_shtab_parttool_erase_partition ;;
  get_partition_info) _arguments $_shtab_parttool_get_partition_info ;;
  read_partition) _arguments $_shtab_parttool_read_partition ;;
  write_partition) _arguments $_shtab_parttool_write_partition ;;
esac
