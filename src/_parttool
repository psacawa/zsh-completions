_shtab_parttool_options_=(
  "(- :)"{-h,--help}"[show this help message and exit]"
  {--quiet,-q}"[suppress stderr messages]"
  "--esptool-args[additional main arguments for esptool]:esptool_args:"
  "--esptool-write-args[additional subcommand arguments when writing to flash]:esptool_write_args:"
  "--esptool-read-args[additional subcommand arguments when reading flash]:esptool_read_args:"
  "--esptool-erase-args[additional subcommand arguments when erasing regions of flash]:esptool_erase_args:"
  {--port,-p}"[port where the target device of the command is connected to\; the partition table is sourced from this device                                             when the partition table file is not defined]:port:"
  {--baud,-b}"[baudrate to use]:baud:"
  {--partition-table-offset,-o}"[offset to read the partition table from]:partition_table_offset:"
  {--partition-table-file,-f}"[file (CSV\/binary) to read the partition table from\;                                                             overrides device attached to specified port as the partition table source when defined]:partition_table_file:"
  {-s,--print-completion}"[print shell completion script]:print_completion:(bash zsh)"
)

_shtab_parttool_commands_() {
  local _commands=(
    "erase_partition:"
    "get_partition_info:"
    "read_partition:"
    "write_partition:"
  )

  _describe 'ESP-IDF Partitions Tool commands' _commands
}

_shtab_parttool_erase_partition=(
  "(- :)"{-h,--help}"[show this help message and exit]"
  {--partition-name,-n}"[name of the partition]:partition_name:"
  {--partition-type,-t}"[type of the partition]:partition_type:"
  {--partition-boot-default,-d}"[select the default boot partition                                            using the same fallback logic as the IDF bootloader]"
  {--partition-subtype,-s}"[subtype of the partition]:partition_subtype:"
)

